server {
    listen 443 ssl default_server;
    server_name localhost;

    ssl_certificate      /etc/nginx/ssl/localhost.crt;
    ssl_certificate_key  /etc/nginx/ssl/localhost.key;
    ssl_protocols        TLSv1.2 TLSv1.3;

    location / {
        proxy_pass http://194.20.1.5:3000/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Configurazione CORS per consentire tutte le origini
        add_header 'Access-Control-Allow-Origin' '*';
        add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS';
        add_header 'Access-Control-Allow-Headers' 'DNT,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type,Range';
        
        # Gestione delle opzioni pre-flight (CORS)
        if ($request_method = 'OPTIONS') {
            add_header 'Access-Control-Allow-Origin' '*';
            add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS';
            add_header 'Access-Control-Allow-Headers' 'DNT,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type,Range';
            add_header 'Content-Length' 0;
            return 204;
        }
    }

    location /server/ {
        proxy_pass http://194.20.1.5:8000/;
        # other proxy settings...

        # Configurazione CORS...
    }

   
    location /server/login {
        proxy_pass http://194.20.1.5:8000/login;
        # other proxy settings...

        # Configurazione CORS...
    }

    location /janus/info {
        proxy_pass http://194.20.1.4:8088/janus/info;
        # other proxy settings...

        # Configurazione CORS...
    }

    # other location blocks if needed...
}
